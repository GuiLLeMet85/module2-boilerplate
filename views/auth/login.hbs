<div id="login" >

  <div class="container-forms">
  <h1>Login</h1>

  <h2>Enter to your Lego Inventory</h2>
  <form class="form-singup" action="/auth/login" method="POST">
 
    <label>Email</label>
    <input type="email" name="email" placeholder="john@doe.com" />
    
    <label>Password</label>
    <input type="password" name="password" placeholder="********" />

    
    {{#if error}}
    <p style="color:rgb(218, 90, 90)">{{ error }}</p>
    {{/if}} 
    <div class="bottom-signlogin">
      <button type="submit" class="btn-green width-300">Login</button>
    </div>   
  </form>
  </div>

</div>
