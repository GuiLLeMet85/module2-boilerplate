 <div id ="home">
     <div class="headers-intro">
        <h1 class="title">Easy brick Manager</h1>
        <h2>The App to inventory your lego bricks</h2> 
      </div>
 
    <div class ="gif-intro">
      <img src ="/pictures/bricks.gif">

    </div> 
    {{#if user}}
     <div class="logged-title">
             <h3>Logged {{user.username}} </h3>  
        </div> 
     {{/if }}  


  

      <!--new bottom -->
<div class="bottom-section-index-bt">
      {{#unless user}}
         <div class="col flex-row with100vw">     
             <button class="bt5 with60px" onclick="window.location.href='/auth/signup'"><i class="fa-solid fa-rocket"></i><br>Sign up  </button> 
             <button class="bt6 with60px" onclick="window.location.href='/auth/login'"><i class="fa-solid fa-user-astronaut"></i><br>Log in </button> 
            <button onclick="history.back()" class="bt7" onclick="window.location.href='/guestUser/pageGuest'"><i class="fa-solid fa-user-secret"></i><br>Guest user</button>  
      
         </div>
      {{/unless}}

      {{#if user}}
         <div class="col flex-row with100vw">  
        <div class="flex-row-space">
   
              <form action="/auth/logout" method="post">       
                <button type="submit" class="bt8"><i class="fa-solid fa-right-from-bracket"></i><br>Log out </button> 
              </form>
  

            <button class="bt6 with60px" onclick="window.location.href='/pageAdmin/pageAdmin'"><i class="fa-solid fa-user-astronaut"></i><br>Page admin</button>

          </div>
         </div>
        {{/if}}
</div>
