
<div id="details-storage">

  <div class="container-forms">
    <h1>Edit the Storage</h1>
       <h2>Name box: {{storage.boxname}}</h2>
{{#unless storage}}
<h2>There isn't any box to show</h2>
{{/unless}}
{{#unless bricks}}
<h2>No bricks</h2>
{{/unless}}

  <h3></h3>
    <div class="pageList">

        <div class="card">
          <img src="{{storage.picture}}">
          {{#each bricks}}
<img src="{{this.brickCategoryId.picture}}" />
<p>{{this.brickCategoryId.brickCategoryName}}</p>
<p>{{this.quantity}} units</p>
{{/each}}
        </div>

    </div>
       
</ul>
</div>
  <div class="bottom-section">

         <div class="sectionbt-bottom">

            <button class="bt2" onclick="window.location.href='/storage/{{storage._id}}/edit'">Edit box</button>
            <button  onclick="window.location.href='/storage/storage'">Storage list</button>  
         
         </div>

       <div class="sectionbt-bottom">

          <form  method="POST" action="/storage/{{storage._id}}/deleteBricks">
            <button type="submit" >Delete brick</button>
           </form>


            <button onclick="history.back()" class="bt1">Go back</button>  
        </div>    
  


           
  