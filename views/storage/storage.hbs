<div id="list-storage">
   
  <div class="container-forms">
       <h1>Storage list</h1>
      {{#unless storage}}
        <h2>There isn't any boxs to show</h2>
      {{/unless}}
  
  <div class="list">

    {{#each storage}}
        <div class="card">
         <div class="pict-card">
       
             <a href='/brick/{{_id}}/details-brick'"> <img src="{{picture}}" alt="box"></a>
        </div>
      <div class="info-list">   
         <h3>{{boxname}}</h3>
        
        <a class="more-info" href='/storage/{{_id}}/storagedetails'">
         <div class="div-more">
            <i class="fa-solid fa-circle-info"></i>
        </div>
        </a>
      </div>
        
        </div>
    {{/each}} 
</div>
</div>