    <h1>Storages</h1>   <br><br>
    {{#if user}}
    <a class="action-btn" href="/storage/create"><h3>Create new storage</h3></a>
    {{/if}}
<div class="pageList">
    {{#each storage}}
        <div class="card">
        <p>Name box: {{boxname}}</p>
        
        <img src="{{picture}}  " alt="">  
          <button class="bt1" onclick="window.location.href='/storage/{{_id}}/storagedetails'">Details</button>
        <a class="action-btn" href="/storage/{{_id}}/edit"><h3>Edit</h3></a>
          <form method="POST" action="/storage/{{_id}}/delete">
            <button type="submit">Delete</button>

          </form>      
        </div>
    {{/each}} 
</div>
  