<div id="list-bricks" >

  <div class="container-forms">
    <h1>Bricks list</h1>
  {{#unless brick}}
    <h2>There isn't any brick to show</h2>
  {{/unless}}
  <div class="list">

    {{#each brick}}
 
      <div class="card">    
        <div class="pict-card">
        <a href='/brick/{{_id}}/details-brick'"> <img src="{{brickCategoryId.picture}}"></a>
        </div>
        <div class="info-list">          
            <h3>{{brickCategoryId.brickCategoryName}}</h3>
            <p>Quantity: {{quantity}}</p>  
            <p>storageName:{{storageName.boxname}}</p>
         <a class="more-info" href='/brick/{{_id}}/details-brick'">
         <div class="div-more">
            <i class="fa-solid fa-circle-info"></i>
        </div>
        </a>
        </div> 

      </div>
   
    {{/each}}  
    </div>

  </div>
</div>