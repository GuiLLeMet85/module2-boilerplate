<div id="details-bricks">

  <div class="container-forms">
    <h1>About your Lego part</h1>
   <h3>{{boxname}}</h3>
{{#unless brickpart}}
<h2>There isn't any brick to show</h2>
{{/unless}}
<ul>
     {{#each brickpart}}
     <div class="pict-card">
          <img src="{{brickCategoryId.picture}}">
        </div>
        <div class="info-list">
            <h3>Category: {{brickCategoryId.brickCategoryName}}</h3>
            <p>Brick id: {{_id}}</p>
            <p>Status: {{status}}</p>
            <p>Color: {{color}}</p>
            <p>Quantity: {{quantity}}</p>
        </div>
    {{/each}}
</ul>
 {{#if user}}
  
  <div class="bottom-section">

         <div class="sectionbt-bottom">

            <button class="bt2" onclick="window.location.href='/storage/{{_id}}/edit'">Edit box</button>
            <button onclick="history.back()" class="bt1">Go back</button>  
         </div>

       <div class="sectionbt-bottom">
            <button class="bt3" onclick="window.location.href='/storage/{{_id}}/deleteBrickInStorage'">Delete this box</button>
            <button  onclick="window.location.href='/storage/storage'">Storage list</button>  
        </div>  
  </div>

  {{/if}}

</div>
