
<div id="edit-brick">
<h1>Edit a Lego part</h1>
<div class="container-forms">

<div class="data-user">
   {{#unless user}}
  <h2>You need to be logged to see this page</h2>
   {{/unless}}

 {{#if user}}
      <form  class="form-singup" method="POST" action="/brick/{{brick._id}}/edit">

      <h2>{{brick.brickCategoryId.brickCategoryName}}</h2>
      <img src="{{brick.brickCategoryId.picture}}">

      <label>Lego ID</label>
      <input type="number" name="brickCategoryLegoId" value='{{brick.brickCategoryId.brickCategoryLegoId}}'/>

      <label>Quantity</label>
      <input type="number" name="quantity"  value='{{brick.quantity}}'/>


      <label>Choose the status:</label>
      <select name="status" id="status" form="creation-form">
        <option value="Using in a set">Using in a set</option>
        <option value="Stored in a box">Stored in a box</option>
        <option value="Unlocated">Unlocated</option>
      </select>

       <div class="bottom-signlogin">
            <button type="submit" class="btn-green">Update <i class="fa-solid fa-rocket"></i></button>
        </div>
    </form>
    {{/if}} 
  </div>
  
</div>

